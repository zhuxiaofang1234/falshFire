/**app.wxss**/
@import 'weui.wxss';

page {
  background: #f9faf9;
  font-family: PingFangSC-Medium;
  font-weight: 500;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.mt-40 {
  margin-top: 40rpx !important;
}

