page {
  background-color: #fff;
}

.commentList {
  margin-top: 46rpx;
  padding: 0 40rpx;
}

.notice-wrap{
  margin-bottom:60rpx;
}

.myfocusImg-wrap {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
  border-radius: 50%; 
}

.myfocusImg {
  display: inline-block;
  font-size: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.notice-title {
  padding-right:50rpx;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(48, 49, 49, 1);
  line-height: 42rpx;
}

.notice-time {
  margin-top:10rpx;
  font-size: 22rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(146, 147, 153, 1);
  line-height: 32rpx;
}

.notice-content {
  background: rgba(243, 244, 245, 1);
  border-radius: 18rpx;
  padding: 22rpx 30rpx;
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(48, 49, 49, 1);
  line-height: 36rpx;
}

.content-title{
  margin-bottom:40rpx;
}
.text-item{
  margin-bottom:10rpx;
}
.text-item:last-child{
   margin-bottom:0;
}
.content-more{
  margin-top:30rpx;
  color:rgba(46,177,175,1);
}