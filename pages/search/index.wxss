@import '../../iconfont.wxss';

page {
  background: #fff;
}

.content-wrap {
  padding: 0 32rpx;
}

.search_form {
  padding: 8rpx 0;
}

.search-bar-box {
  position: relative;
  padding-left: 30px;
  width: 100%;
  margin-right: 36rpx;
  box-sizing: border-box;
  z-index: 1;
  height: 64rpx;
  background: rgba(243, 244, 245, 1);
  border-radius: 32rpx;
  border: 1px solid rgba(249, 250, 249, 1);
}

.icon-sousuo {
  position: absolute;
  left: 10px;
  top: 9px;
}

.search_btn {
  width: 56rpx;
  font-size: 28rpx;
  padding-top: 16rpx;
}

.search-bar_input {
  height: 100%;
  font-size: 28rpx;
  color: rgba(48, 49, 49, 1);
}

/***搜索历史**/

.serach-wrap {
  margin-top: 36rpx;
  padding-bottom: 36rpx;
}

.flash-text {
  font-size: 28epx;
  font-family: PingFangSC-Regular;
  color: rgba(48, 49, 49, 1);
  line-height: 40rpx;
}

.icon-delete {
  float: right;
  margin-right: 18rpx;
  margin-top: 4rpx;
}

.search-content {
  margin-top: 20rpx;
}

.search-item {
  display: inline-block;
  height: 40rpx;
  background: rgba(237, 239, 242, 1);
  border-radius: 20rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(97, 98, 101, 1);
  padding: 0 16rpx;
  margin-right: 20rpx;
  margin-bottom: 12rpx;
  line-height: 40rpx;
}

.tips-text {
  font-size: 24rpx;
  color: rgba(146, 147, 153, 1);
  line-height: 34rpx;
  letter-spacing: 1px;
}

.noSearch-wrap {
 width:160rpx;
 height:190rpx;
 margin-bottom:38rpx;
}

.responsive-img {
  display: inline-block;
  font-size: 0;
  width: 100%;
  height: 100%;
}

.no-search-content {
  margin-top: 168rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
