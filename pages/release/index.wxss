/* pages/release/index.wxss */

page {
  background-color: #fff;
}

.weui-cell {
  padding: 14px 16px;
}

.weui-uploader__bd {
  overflow: unset;
}

.weui-uploader__img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
}

.weui-uploader__file_status:before {
  border-radius: 12rpx;
}

.weui-uploader__file {
  position: relative;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 12rpx;
}

.weui-uploader__input-box {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 12rpx;
  background: rgba(249, 250, 249, 1);
  border: 1px solid rgba(237, 239, 243, 1);
}

.delImgWrap {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  top: -12rpx;
  right: -12rpx;
}

.delImg {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.title-section {
 
}

.title {
  padding:24rpx 0;
  width:100%;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(48, 49, 49, 1);
}

.title-text {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(146, 147, 153, 1);
}

.release-content {
  display: block;
  width: 100%;
  height: 356rpx;
  padding: 20rpx 0;
  border-top: 2rpx solid #edeff3;
  border-bottom: 2rpx solid #edeff3;
}

.flash-navigator {
  padding: 28rpx 0;
}

.flash-text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(146, 147, 153, 1);
  line-height: 40rpx;
}

.addtopicImg {
  width: 14px;
  height: 14px;
  margin-right: 20rpx;
}

.topic-more {
  text-align: right;
}

.topic-tips {
  font-size: 24rpx;
}

.publicMoreImg {
  width: 12px;
  height: 12px;
  margin-left: 4px;
  margin-right: 6px;
}

.footer {
  margin-top: 26rpx;
  margin-bottom: 162rpx;
  text-align: right;
}

.btn-container {
  position: relative;
  margin-right: 40rpx;
}

.btn-blank.flash-btn {
  background: #fff;
  border: 2rpx solid rgba(146, 147, 153, 1);
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFangSC;
  font-weight: 500;
  color: rgba(146, 147, 153, 1);
}
