.flash-navbar {
  position: relative;
  padding: 26rpx 0;
  font-size: 0;
  text-align: center;
  background-color: #fff;
}

.flash-navbar__item {
  display: inline-block;
  vertical-align: middle;
  margin-right: 118rpx;
  font-size: 32rpx;
}

.weui-navbar__title {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(146, 147, 153, 1);
   letter-spacing: 2px;
}

.weui-navbar__title.active {
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(48, 49, 49, 1);
  letter-spacing: 2px;
}

.flash-navbar__item:nth-child(2) {
  margin-right: 0;
}

.slider_selected {
  position: absolute;
  bottom: 0;
  left: 142px;
}
